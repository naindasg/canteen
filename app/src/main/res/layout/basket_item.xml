<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/basket_meal_quantity_r"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:padding="10dp"
        android:text="1"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/basket_meal_name_r"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_weight="1"
        android:padding="10dp"
        android:text="Burger King"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/basket_meal_subtotal_r"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Â£10.00"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/basket_meal_Id_r"
        android:layout_width="5dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/basket_meal_description_r"
        android:layout_width="5dp"
        android:layout_height="2dp"
        android:text="desc"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/basket_meal_image_url_r"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:text="url"
        android:visibility="invisible" />

</LinearLayout>